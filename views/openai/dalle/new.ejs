<%layout('layouts/boilerplate')%>
<h1 class="text-center">Ask DALL-E for something.
</h1>
<form action="/openai/generateimage" method="POST">
   
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Type Something</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="for example, a white Siamese cat" name="prompt"></textarea>
    </div>
    <h3>Select an image size</h3>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="size" id="small" value="small">
        <label class="form-check-label" for="small">
          Small
        </label>
      </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="size" id="medium" value="medium" checked>
        <label class="form-check-label" for="medium">
          Medium
        </label>
      </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="size" id="large" value="large">
        <label class="form-check-label" for="large">
          Large
        </label>
      </div>
      
     
    <button class="btn btn-primary btn-lg mt-2">Submit</button>
  </form>