<%layout('layouts/boilerplate')%>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          Talk to ChatGPT
        </div>
        <div class="card-body">
          <div class="messages">
            <%=newResponse%>
          </div>
          <hr>
          <form action="/openai/chatgpt" method="POST">
            <div class="form-group">
              <label for="message-input">Ask Anything</label>
              <textarea class="form-control" id="message-input" rows="3" name="prompt"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
